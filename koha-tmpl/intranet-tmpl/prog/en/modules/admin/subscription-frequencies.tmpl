<div id="breadcrumbs"><a href="/cgi-bin/koha/mainpage.pl">Home</a> &rsaquo; <a href="/cgi-bin/koha/admin/admin-home.pl">Administration</a> &rsaquo; Frequencies</div>

<div id="doc3" class="yui-t2">

<div id="bd">
  <div id="yui-main">
    <div class="yui-b">
      <!-- TMPL_IF NAME="new_or_mod" -->
        <!-- TMPL_IF NAME="new" -->
          <h1>New frequency</h1>
        <!-- TMPL_ELSE -->
          <h1>Modify frequency: <!-- TMPL_VAR NAME="description" --></h1>
        <!-- /TMPL_IF -->
        <form action="/cgi-bin/koha/admin/subscription-frequencies.pl" method="post">
          <!-- TMPL_IF NAME="mod" -->
            <input type="hidden" name="id" value="<!-- TMPL_VAR NAME='id' -->" />
            <input type="hidden" name="op" value="savemod" />
          <!-- TMPL_ELSE -->
            <input type="hidden" name="op" value="savenew" />
          <!-- /TMPL_IF -->
          <fieldset class="rows">
            <ol>
              <li>
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" value="<!-- TMPL_VAR NAME='description' -->" />
              </li>
              <li>
                <label for="unit">Unit</label>
                <select id="unit" name="unit">
                  <option value="">None</option>
                  <!-- TMPL_LOOP NAME="units_loop" -->
                    <!-- TMPL_IF NAME="selected" -->
                      <option selected="selected" value="<!-- TMPL_VAR NAME='val' -->">
                    <!-- TMPL_ELSE -->
                      <option value="<!-- TMPL_VAR NAME='val' -->">
                    <!-- /TMPL_IF -->
                      <!-- TMPL_VAR NAME='val' -->
                    </option>
                  <!-- /TMPL_LOOP -->
                </select>
              </li>
              <li>
                <label for="issuesperunit">Issues per unit</label>
                <input type="text" id="issuesperunit" name="issuesperunit" value="<!-- TMPL_VAR NAME='issuesperunit' -->" size="3" />
              </li>
              <li>
                <label for="unitsperissue">Units per issue</label>
                <input type="text" id="unitsperissue" name="unitsperissue" value="<!-- TMPL_VAR NAME='unitsperissue' -->" size="3" />
              </li>
              <li>
                <label for="expectedissuesayear">Expected issues a year</label>
                <input type="text" id="expectedissuesayear" name="expectedissuesayear" value="<!-- TMPL_VAR NAME='expectedissuesayear' -->" size="3" />
              </li>
              <li>
                <label for="displayorder">Display order</label>
                <input type="text" id="displayorder" name="displayorder" value="<!-- TMPL_VAR NAME='displayorder' -->" size="3" />
              </li>
            </ol>
          </fieldset>
          <fieldset class="action">
            <input type="submit" value="Save" />
            <input type="button" value="Cancel" onclick="window.location='/cgi-bin/koha/admin/subscription-frequencies.pl'" />
          </fieldset>
        </form>
      <!-- TMPL_ELSE -->
        <a href="/cgi-bin/koha/admin/subscription-frequencies.pl?op=new">New frenquency</a>

        <!-- TMPL_IF NAME="frequencies_loop" -->
          <h1>Frenquencies</h1>
          <table id="frequenciest">
            <thead>
              <tr>
                <th>Description</th>
                <th>Unit</th>
                <th>Issues per unit</th>
                <th>Units per issue</th>
                <th>Expected issues a year</th>
                <th>Display order</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <!-- TMPL_LOOP NAME="frequencies_loop" -->
                <tr>
                  <td><!-- TMPL_VAR NAME="description" --></td>
                  <td><!-- TMPL_VAR NAME="unit" --></td>
                  <td><!-- TMPL_VAR NAME="issuesperunit" --></td>
                  <td><!-- TMPL_VAR NAME="unitsperissue" --></td>
                  <td><!-- TMPL_VAR NAME="expectedissuesayear" --></td>
                  <td><!-- TMPL_VAR NAME="displayorder" --></td>
                  <td>
                    <a href="/cgi-bin/koha/admin/subscription-frequencies.pl?op=mod&frequencyid=<!-- TMPL_VAR NAME='id' -->">Modify</a> |
                    <a href="/cgi-bin/koha/admin/subscription-frequencies.pl?op=del&frequencyid=<!-- TMPL_VAR NAME='id' -->" onclick="return confirmDelete();">Delete</a>
                  </td>
                </tr>
              <!-- /TMPL_LOOP -->
            </tbody>
          </table>
        <!-- TMPL_ELSE -->
          <p>There is no defined frequency.</p>
        <!-- /TMPL_IF -->
      <!-- /TMPL_IF -->

    </div>
  </div>
  <div class="yui-b">
