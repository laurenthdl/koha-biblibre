function updateRowsVisibility(show_only_renewed) {
    if ( show_only_renewed ) {
        $("#resultst [data-subscriptionid='']").hide();
    } else {
        $("#resultst > tbody > tr").show();
    }
    $("#resultst").trigger("sorton", [$("#resultst")[0].config.sortList]);
}

$(document).ready(function() {
    Calendar.setup({
        inputField: "billingdatefrom",
        ifFormat: "<!-- TMPL_VAR NAME='DHTMLcalendar_dateformat' -->",
        button: "billingdatefromCalendar"
    });
    Calendar.setup({
        inputField: "billingdateto",
        ifFormat: "<!-- TMPL_VAR NAME='DHTMLcalendar_dateformat' -->",
        button: "billingdatetoCalendar"
    });
    $("#resultst").tablesorter({
        widgets : ['zebra'],
        headers: {
            6: { sorter: false },
        }
    });
    $("#show_only_subscription").click(function(){
        updateRowsVisibility($(this+":checked").val());
    });
    $("#show_only_subscription").attr('checked', false);
    updateRowsVisibility(false);
});
//]]>
