<h1>Search Existing Records</h1>

<p>Query is: <strong><!-- TMPL_VAR NAME='query' --></strong></p>

<form onsubmit="return filter();">
    <fieldset class="rows">
        <legend>Filters</legend>
        <ol>
            <li>
                <label for="title_filter">Title:</label>
                <input type="text" id="title_filter" class="filter" data-indexname="title" />
            </li>
            <li>
                <label for="author_filter">Author:</label>
                <input type="text" id="author_filter" class="filter" data-indexname="author" />
            </li>
            <li>
                <label for="publisher_filter">Publisher:</label>
                <input type="text" id="publisher_filter" class="filter" data-indexname="publisher" />
            </li>
            <li>
                <label for="subject_filter">Subject:</label>
                <input type="text" id="subject_filter" class="filter" data-indexname="subject" />
            </li>
            <li>
                <label for="isbn_filter">ISBN:</label>
                <input type="text" id="isbn_filter" class="filter" data-indexname="isbn" />
            </li>
            <li>
                <label for="series_filter">Series:</label>
                <input type="text" id="series_filter" class="filter" data-indexname="title-series" />
            </li>
            <li>
                <label for="callnumber_filter">Call number:</label>
                <input type="text" id="callnumber_filter" class="filter" data-indexname="callnumber" />
            </li>
        </ol>
        <fieldset class="action">
            <input type="submit" value="Filter" />
            <input type="button" value="Clear" onclick="clearFilters();" />
        </fieldset>
    </fieldset>
</form>

