<script type="text/javascript">
//<![CDATA[
var dt_orders;

function filter() {
    dt_orders.fnDraw();
    return false;
}

function clearFilters() {
    $("input.filter").val('');
    dt_orders.fnDraw();
}

$(document).ready(function() {
    dt_orders = $("#orderst").dataTable($.extend(true, {}, dataTablesDefaults, {
        'bAutoWidth': false,
        'bProcessing': true,
        'bServerSide': true,
        'sAjaxSource': '/cgi-bin/koha/acqui/tables/orders.pl',
        'fnServerData': function(sSource, aoData, fnCallback) {
            $("input.filter").each(function() {
                if($(this).val() && $(this).attr('data-indexname')) {
                    aoData.push({
                        'name' : 'filters',
                        'value': $(this).attr('data-indexname')
                    },{
                        'name' : 'filters_values',
                        'value': $(this).val()
                    });
                }
            });

            aoData.push({
                'name' : 'booksellerid',
                'value': '<!-- TMPL_VAR NAME="booksellerid" -->'
            },{
                'name' : 'basketno',
                'value': '<!-- TMPL_VAR NAME="basketno" -->'
            },{
                'name' : 'query',
                'value': '<!-- TMPL_VAR NAME="query" -->',
            },{
                'name' : 'summary_sorton',
                'value': 'title'
            });
            $.ajax({
                "dataType": 'json',
                "type": "POST",
                "url": sSource,
                "data": aoData,
                "success": fnCallback
            });
        },
        'aoColumns': [
            { "mDataProp": "summary" },
            { "mDataProp": "publisher", "bSortable": false },
            { "mDataProp": "copyright", "bSortable": false, "bSearchable": false },
            { "mDataProp": "view_marc", "bSortable": false, "bSearchable": false },
            { "mDataProp": "order", "bSortable": false, "bSearchable": false }
        ],
        'aaSorting': [],
        'bFilter': false,
        'sPaginationType': 'full_numbers'
    }));

} );
//]]>
</script>
</head>
