                            <div id="toolbar"><a id="selectallbutton" href="#">Select All</a> | <a id="clearallbutton" href="#">Clear All</a></div><!-- TMPL_ELSE --><!-- /TMPL_IF -->
                            <div id="cataloguing_additem_itemlist">
                                <div style="overflow:auto">
                                    <table id="borrowerst">
                                        <thead>
                                            <tr>
                                                <th>&nbsp;</th>
                                                <th>Surname</th>
                                                <th>Firstname</th>
                                                <th>Branchname</th>
                                                <th>Categorycode</th>
                                                <th>Cardnumber</th>
                                                <th>dateenrolled</th>
                                                <th>dateexpiry</th>
                                                <th>debarred</th>
                                                <!-- TMPL_LOOP NAME="attributes_header" -->
